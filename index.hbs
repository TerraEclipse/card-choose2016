<!DOCTYPE html>
<html>
<head>
  {{{styles}}}
  <script type="text/javascript" src="//use.typekit.net/mkq7ipr.js"></script>
  <script type="text/javascript">try{Typekit.load();}catch(e){}</script>
</head>
<body {{{bodyClasses}}}>
  <div class="wrapper">
    <div class="candidate-image">
      <div class="image-wrapper">
        {{#if variants}}
          <img src="{{candidate_picture}}" alt="{{candidate_name}}">
        {{/if}}
      </div>
      <div class="image-overlay"></div>
    </div>
    <div class="main">
      <div class="main-inner">
        <div class="info">
          <span class="name">{{{first}}} {{{last}}}</span>
          <span class="spacer">.</span>
          <span class="location">
            {{{city}}}
            {{#if state}}{{#if city}}, {{/if}}{{/if}}
            {{#if city}}{{state}}{{else}}{{state_full}}{{/if}}
          </span>
        </div>
        <div class="signature">
          {{#if avatar}}
            <div class="avatar-wrapper">
              <span class="avatar" style="background-image: url({{{avatar}}})"></span>
            </div>
          {{/if}}
        </div>
      </div>
    </div>
  </div>
  {{{scripts}}}
</body>
</html>

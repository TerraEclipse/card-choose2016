<!DOCTYPE html>
<html>
<head>
  {{{styles}}}
  <script type="text/javascript" src="//use.typekit.net/mkq7ipr.js"></script>
  <script type="text/javascript">try{Typekit.load();}catch(e){}</script>
</head>
<body {{{bodyClasses}}}>
  <div class="wrapper">
    <div class="candidate-image">
      {{#if variants}}
        <img src="/images/{{variants}}.jpg" alt="{{variant}}">
        <img src="images/{{variants}}.jpg" alt="{{variant}}">
      {{/if}}

      {{variants}}
    </div>
    <div class="signature">
      {{#if avatar}}
        <div class="avatar-wrapper">
          <span class="avatar" style="background-image: url({{{avatar}}})"></span>
        </div>
      {{/if}}
    </div>
    <div class="info">
      <span class="name">{{{first}}} {{{last}}}</span>
      <span class="spacer">.</span>
      <span class="location">
        {{{city}}}
        {{#if state}}{{#if city}}, {{/if}}{{/if}}
        {{#if city}}{{state}}{{else}}{{state_full}}{{/if}}
      </span>
    </div>
  </div>
  {{{scripts}}}
</body>
</html>
